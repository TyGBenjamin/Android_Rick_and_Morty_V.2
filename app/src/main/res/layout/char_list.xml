<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:hint="NAME"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/tv_species"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@id/imageView"
                app:layout_constraintVertical_bias="0.173"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_species"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:hint="Species"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/tv_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.182"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.506"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_life"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:hint="alive"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/tv_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toEndOf="@id/tv_species"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="158dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:hint="Citadel of Ricks"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.315"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@id/tv_species"
                app:layout_constraintVertical_bias="0.84"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_locationHard"
                android:layout_width="158dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Last known location"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/tv_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.315"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@id/tv_species"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_episodeHard"
                android:layout_width="158dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="First Seen in"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.315"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@id/tv_location"
                app:layout_constraintVertical_bias="0.058"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_episode"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:hint="#int"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_episodeHard"
                app:layout_constraintTop_toBottomOf="@id/tv_location"
                app:layout_constraintVertical_bias="0.083"
                tools:ignore="MissingConstraints" />

            <!--            <TextView-->
            <!--                android:id="@+id/tv_episode"-->
            <!--                android:layout_width="158dp"-->
            <!--                android:layout_height="25dp"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:text="TextView"-->
            <!--                android:textSize="20sp"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintHorizontal_bias="0.5"-->
            <!--                app:layout_constraintStart_toEndOf="@+id/imageView"-->
            <!--                app:layout_constraintTop_toTopOf="parent"-->
            <!--                tools:ignore="MissingConstraints" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
