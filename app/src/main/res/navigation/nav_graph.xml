<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.rave.rickandmortyv2.screens.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.rave.rickandmortyv2.screens.character_details.CharacterDetailsFragment"
        android:label="fragment_character_details"
        tools:layout="@layout/fragment_character_details" >
        <action
            android:id="@+id/action_characterDetailsFragment_to_locationDetailsFragment"
            app:destination="@id/locationDetailsFragment" />
        <action
            android:id="@+id/action_characterDetailsFragment_to_characterEpisodesFragment"
            app:destination="@id/characterEpisodesFragment" />
        <argument
            android:name="charId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailsFragment"
        android:name="com.rave.rickandmortyv2.screens.location_details.LocationDetailsFragment"
        android:label="fragment_location_details"
        tools:layout="@layout/fragment_location_details" >
        <action
            android:id="@+id/action_locationDetailsFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
        <argument
            android:name="locationId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/characterEpisodesFragment"
        android:name="com.rave.rickandmortyv2.screens.episodes_list.EpisodesListFragment"
        android:label="fragment_character_episodes"
        tools:layout="@layout/fragment_episodes_list" >
        <action
            android:id="@+id/action_characterEpisodesFragment_to_characterAppearancesFragment"
            app:destination="@id/characterAppearancesFragment" />
        <argument android:name="charId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/characterAppearancesFragment"
        android:name="com.rave.rickandmortyv2.screens.character_appearances.CharacterAppearancesFragment"
        android:label="fragment_character_appearances"
        tools:layout="@layout/fragment_character_appearances" >
        <action
            android:id="@+id/action_characterAppearancesFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
        <argument
            android:name="episodeId"
            app:argType="string" />
    </fragment>
</navigation>